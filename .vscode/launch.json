    "version": "0.2.0",
    "configurations": [
        {
            "name": "Geo Service (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GeoService/bin/Debug/net7.0/GeoService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GeoService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
            }
        },
        {
            "name": "Gateway (Debug)",
